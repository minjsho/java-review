package practice;

public class Ex05_05 {
	public static void main(String[] args) {
		/*
		 * for(int i=0; i<4; i++){ -> 행
		 * 	for(int j=0; j<i-1; j++){
		 * 		공백 " " 출력
		 * 	}
		 * 	for(int j=0; j<i+1; j++){
		 * 		"* " 출력
		 *  }
		 * 행마다 줄바꿈
		 * }
		 */
		
		for(int i=0; i<4; i++){
			for(int j=0; j<i-1; j++){
				System.out.println(" ");
			}
			for(int j=0; j<i+1; j++){
				System.out.println("* ");
			}
			System.out.println();
		}
		
	}

}
